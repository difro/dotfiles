	protocol = https

[fetch]
	prune = true

[pull]
	ff = only

[rerere]
	enabled = true

[diff]
	colorMoved = default
	algorithm = histogram

[safe]
	directory = .

[merge]
	conflictstyle = zdiff3

[help]
	autocorrect = prompt

[interactive]
	; diffFilter = diffr
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	; features = catppuccin-mocha
	
	dark = true
	line-numbers = true
	side-by-side = false

[include]
	path = ~/.gitconfig.local
	path = ~/.gitconfig.themes

[credential "https://oss.navercorp.com"]
	provider = github
